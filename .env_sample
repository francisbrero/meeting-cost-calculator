# Meeting Cost Calculator Configuration
# Copy this file to .env and fill in your actual values

# === Required Configuration ===

# Google Workspace domain (e.g., "company.com")
DOMAIN=your-domain.com

# Path to your Google Cloud service account credentials JSON file
# You should create this file from credentials.json.sample
GOOGLE_CREDENTIALS_PATH=./credentials.json

# === Optional Configuration ===

# Default hourly rate for cost calculation (default: 125)
DEFAULT_RATE=125

# Cost tag format for calendar annotations (default: [[Estimated Meeting Cost]])
COST_TAG=[[Estimated Meeting Cost]]

# Skip mixed internal/external meetings (default: true)
INTERNAL_ONLY=true

# Maximum number of users to process (safety limit, default: 10000)
MAX_USERS=10000

# Event window for full sync fallback in days (default: 35)
WINDOW_DAYS=35

# Admin user email for Directory API impersonation (optional)
# If not set, the service account will be used directly
ADMIN_SUBJECT=

# === Test Configuration ===

# Email of a user in your domain for testing
TEST_USER_EMAIL=test@your-domain.com